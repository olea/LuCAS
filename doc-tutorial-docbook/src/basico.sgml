       <textobject>
	<phrase>Tabla de contenidos <acronym>HTML</acronym> generada a
	 partir de <filename>hola.sgml</filename></phrase>
       </textobject>
      </mediaobject>
     </screenshot>
    </informalfigure>

    <indexterm>
     <primary><application>Galeon</application></primary>
    </indexterm>
    
