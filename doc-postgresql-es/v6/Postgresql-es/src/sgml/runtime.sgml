	 <listitem>
	  <para>
	   No escribir la petici&oacute;n.
	  </para>
	 </listitem>
	</varlistentry>

	<varlistentry>
	 <term>
	  1
	 </term>
	 <listitem>
	  <para>
	   Escribir una versi&oacute;n condensada de la petici&oacute;n en una l&iacute;nea.
	  </para>
	 </listitem>
	</varlistentry>

	<varlistentry>
	 <term>
	  4
	 </term>
	 <listitem>
